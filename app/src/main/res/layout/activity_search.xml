<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_translate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사투리 번역기"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/translater" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="표준말"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/edt_standard"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="번역하기"
        android:textSize="20dp"
        android:backgroundTint="#637763"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="340dp"
        android:id="@+id/btn_translate"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/translater" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사투리"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="30dp"
        android:text="사투리가 나옵니당!"
        android:textSize="30dp"
        android:id="@+id/txt_dialect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사투리 사전 바로가기"
        android:textSize="20dp"
        android:backgroundTint="#637763"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="610dp"
        android:id="@+id/btn_dic"/>

</RelativeLayout>